---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-sans text-base text-slate-700 tracking-wider">
    <div class="pt-16">
      <header class="bg-white fixed shadow top-0 w-full z-10">
        <div
          class="flex gap-5 justify-between items-center px-4 md:px-10 py-4 md:py-5"
        >
          <h1 class="font-bold leading-5 mr-4 text-sm md:text-xl">
            <a href=".">DAISUKE YUMA</a>
          </h1>
          <nav>
            <ul
              class="flex gap-2 md:gap-4 justify-between list-none text-xs md:text-sm"
            >
              <li class="whitespace-nowrap"><a href="#a">プロフィール</a></li>
              <li class="whitespace-nowrap"><a href="#b">スキル</a></li>
              <li class="whitespace-nowrap"><a href="#c">経歴</a></li>
              <li class="whitespace-nowrap"><a href="#d">プロダクト</a></li>
              <li class="whitespace-nowrap"><a href="#e">その他</a></li>
            </ul>
          </nav>
        </div>
      </header>
      <slot />
    </div>
  </body>
</html>
